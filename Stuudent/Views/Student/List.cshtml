@model IEnumerable<Stuudent.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>For Admin</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RollNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SscResult)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HscResult)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cgpa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RollNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SscResult)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HscResult)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cgpa)
        </td>
        @if (User.IsInRole("CanManage"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDStudent }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDStudent }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDStudent })
            </td>
        }
    </tr>
}

</table>
